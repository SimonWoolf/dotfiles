input "1386:789:Wacom_Intuos_Pro_M_Pen" {
  tap_button_map lmr
}

input "1386:789:Wacom_Intuos_Pro_M_Finger" {
    click_method clickfinger
    drag enabled
    scroll_method two_finger
    natural_scroll enabled
    tap enabled
    accel_profile adaptive
}
input "1386:789:Wacom_Intuos_Pro_M_Pad" {
    click_method clickfinger
    scroll_method two_finger
    # natural_scroll enabled
    tap enabled
    # drag enabled
    dwt enable
}


bindsym --input-device=1386:789:Wacom_Intuos_Pro_M_Pen BTN_STYLUS2 "click button3"
bindsym --input-device=1386:789:Wacom_Intuos_Pro_M_Pen BTN_STYLUS "click button2"
