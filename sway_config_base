# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Caps_Lock mode "default"
}
bindsym $mod+r mode "resize"

#set $powerman System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "powerman" {
    bindsym l exec --no-startup-id i3powerman lock, mode "default"
    bindsym e exec --no-startup-id i3powerman logout, mode "default"
    bindsym s exec --no-startup-id i3powerman suspend, mode "default"
    bindsym h exec --no-startup-id i3powerman hibernate, mode "default"
    bindsym r exec --no-startup-id i3powerman reboot, mode "default"
    bindsym t exec --no-startup-id i3powerman test, mode "default"
    bindsym Shift+s exec --no-startup-id i3powerman shutdown, mode "default"

    bindsym f exec --no-startup-id sleep 300 && systemctl suspend &, mode "default"
    bindsym q exec --no-startup-id sleep 900 && systemctl suspend &, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym F10 mode "powerman"

mode "tt" {
    bindsym w exec --no-startup-id echo 'w' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym b exec --no-startup-id echo 'b' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym p exec --no-startup-id echo 'p' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym n exec --no-startup-id echo 'n' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym l exec --no-startup-id echo 'l' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym i exec --no-startup-id echo 'i' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym q exec --no-startup-id echo 'q' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym d exec --no-startup-id echo 'd' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym o exec --no-startup-id echo 'o' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym k exec --no-startup-id echo 'k' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym m exec --no-startup-id echo 'm' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym t exec --no-startup-id echo 't' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"
    bindsym a exec --no-startup-id echo 'a' |  socat - UNIX-CONNECT:/tmp/tt.sock, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym F8 mode "tt"

