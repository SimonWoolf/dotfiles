exec systemctl --user import-environment WAYLAND_DISPLAY

font pango:Meslo LG S for Powerline 13

# set things to workspaces
# external
workspace 1 output HDMI-A-2
workspace 2 output HDMI-A-2
workspace 3 output HDMI-A-2
workspace 4 output HDMI-A-2
workspace 5 output HDMI-A-2
# laptop screen:
workspace 6 output eDP-1
workspace 7 output eDP-1
workspace 8 output eDP-1
workspace 9 output eDP-1
workspace 10 output eDP-1

# night mode
# on laptop, no point adjusting the brightness in xrandr, inefficient use of
# battery - just adjust colour temp and do brightness with backlight adjustment
bindsym $mod+n exec "killall gammastep; gammastep -x"
bindsym $mod+e exec "killall gammastep; gammastep -P -r -O 5000"
bindsym $mod+i exec "killall gammastep; gammastep -P -r -O 4000"
bindsym $mod+o exec "killall gammastep; gammastep -P -r -O 3500"
bindsym $mod+apostrophe exec "killall gammastep; gammastep -P -r -O 3000"

input type:keyboard {
  xkb_layout "gb"
  xkb_variant "custom"
}

input type:touchpad {
  tap_button_map "lrm"
  click_method "clickfinger"
  # tap "enabled"
}

# Program runner (fuzzel - native wayland, no xwayland needed)
bindsym Control+space exec fuzzel
# Window switcher
bindsym $mod+space exec /home/simon/dev/dotfiles/bin/sway-window-switcher

# cursor theme
seat seat0 xcursor_theme Adwaita 28

set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema cursor-theme Adwaita
    gsettings set $gnome-schema cursor-size 48
}

exec swayidle -w \
         timeout 600 'swaylock -f -c 888888' \
         before-sleep 'swaylock -f -c 888888' \
         after-resume '' # could be useful
