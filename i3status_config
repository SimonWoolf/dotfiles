general {
  colors = true
  color_good = "#FFFFFF"
  color_degraded = "#FFFF60"
  color_BAD = "#FFB060"
  interval = 5
}

order += "wireless _first_"
order += "battery 0"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime local"

wireless _first_ {
  format_up = " ðŸ–§ (%quality at %essid) %ip "
  format_down = " ðŸ–§ down "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
  format_up = "E %ip (%speed)"
  format_down = "E down "
}

battery 0 {
  format = " %status %percentage "
}

tztime local {
  format = " %a %Y-%m-%d %H:%M "
}

cpu_usage {
  format = " CPU %usage% "
}

